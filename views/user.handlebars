                    </div>
                </div>
            </div>

            <-- Add an event -->
            <form id="event-form" class="h-auto text-gray-800 flex flex-col sm:mx-auto text-center">
                <span class="text-2xl">Add an event</span>
                <div class="mt-4 bg-gray-300 shadow-md rounded-lg">
                    <div class="h-2 bg-red-400 rounded-t-md"></div>
                    
                    <div class="px-8 py-4"></div>

                        <div class="inline-flex justify-center">
                        {{!-- label for event type dropdown --}}
                            <label for="event-type" class="flex justify-start mt-4 block font-semibold text-left mr-4">Select event
                                type</label>
                        
                            <select name="eventType" id="event-type" placeholder="Event Type"
                                class="form-select flex flex-center w-64 h-10 my-4 hover:outline-none focus:ring-1 focus:ring-red-400 rounded-md"
                                name="event-type" id="filterEvent">
                                <option value="nursing" >Nursing</option>
                                <option value="feeding">Feeding</option>
                                <option value="sleep">Sleep</option>
                                <option value="diaper">Diaper Change</option>

                            </select>
                        </div>
                        <!-- label for select child dropdown -->
                            <label class="block font-semibold mr-4 mt-4">Select Child</label>
                            {{!-- select child dropdown pulled from stored data --}}
                            <select placeholder="Child name" id="childEvent"
                                class="form-select w-64 h-5 py-5 mt-2 hover:outline-none focus:ring-1 focus:ring-red-400 rounded-md"
                                name="filterChild" id="filterChild">
                                {{#each baby}}
                                <option value="{{id}}">{{baby_name}}</option>
                                {{/each}}
                            </select>
  
                            <div class="inline-flex">
                                {{!-- label for event note text area --}}
                                <label for="note" class="flex justify-start pt-4 block font-semibold text-left mr-4">Event Notes</label>
                                {{!-- text area for event note input --}}
                                <textarea name="note" id="note" placeholder="Event Notes"
                                    class="border w-64 h-20 px-3 py-5 mt-2 hover:outline-none focus:ring-1 focus:ring-red-400 rounded-md"></textarea>
                            </div>
                            <div class="flex justify-around item-baseline">
                                <button type="submit"
                                    class="my-8 mr-2 bg-red-400 text-white py-2 px-6 rounded-md hover:bg-red-800">Add
                                    Event</button>
                            </div>

                        </div>
                    </div>
