<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/style.css" />
    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet">

    <title>BABY BRAIN</title>
</head>


<body class="bg-gradient-to-b from-green-200 via-blue-200 to-red-200">
    <header >
        <div class="pt-8 flex-row justify-space-between align-center container-fluid mx-auto">
            <div class="flex-shrink-0 flex items-center">
                <span class="m-auto text-5xl text-red-400 font-medium"><i class="fas fa-baby px-2" aria-hidden="true"></i>Baby Brain</span>
                <button type="button" id="logout" class="mt-4 mr-2 bg-red-400 text-white py-2 px-6 rounded-md hover:bg-red-800">Logout</button>
            </div>
      </header>

    <div class="min-h-screen text-gray-800 flex flex-col justify-center"> 
      <!-- page content goes here -->
        <!-- establish 2 colums -->
        <div class="grid grid-cols-3 gap-3 mt-8">

            <!-- first column, all events -->
            <div class="col-span-2 mx-8">
            <div class="h-100 text-gray-800 flex flex-col sm:mx-auto text-center">
                <span class="text-2xl">Childhood events</span>
                <div class="h-screen mt-4 bg-gray-300 shadow-md rounded-lg">
                    <div class="h-2 bg-red-400 rounded-t-md"></div>
                    <div class="px-8 py-6">
                        <div class="flex justify-around item-baseline">
                        </div>
                    </div>
                </div>
            </div>
            </div>

            <!-- second column -->
            <div class="col-span-1" >

                <!-- Filter events -->
                <div class="h-auto text-gray-800 flex flex-col sm:mx-auto text-center"> 
                    <span class="text-2xl">Filter events</span>
                    <div class="mt-4 mb-4 bg-gray-300 shadow-md rounded-lg">
                        <div class="h-2 bg-red-400 rounded-t-md"></div>
                        <div class="px-8 py-6">
                        <!-- Filter by child       -->
                            <div class="inline-flex">
                            <label class="block font-semibold text-left mr-4 mt-4">Filter by child</label> 
                            <select placeholder="Child name" 
                                class="form-select w-96 h-5 px-3 py-5 mt-2 hover:outline-none focus:ring-1 focus:ring-red-400 rounded-md" 
                                name="filterChild" id="filterChild"
                                 >
                                    <!-- This picklist will be populated by selecting children from logged in user -->
                            </select>
                        </div>

                        <!-- filter by event -->
                        <div class="inline-flex">
                            <label class="block font-semibold text-left mr-4 mt-4">Filter by event type</label> 
                            <select placeholder="Event Type"
                                class="form-select w-96 h-5 px-3 py-5 mt-2 hover:outline-none focus:ring-1 focus:ring-red-400 rounded-md" 
                                name="filterEvent" id="filterEvent"
                             >
                               <!-- This picklist will be populated by the actions table -->
                            </select>
                        </div>

                            <div class="flex justify-around item-baseline">
                                <button type="submit" class="mt-4 mr-2 bg-red-400 text-white py-2 px-6 rounded-md hover:bg-red-800">Filter Events</button>
                            </div>
                        </div>
                    </div>
                </div>
            
                <!-- Add a Child -->
                <div class="h-auto text-gray-800 flex flex-col sm:mx-auto text-center"> 
                     <span class="text-2xl">Add a child</span>
                            <div class="my-4 bg-gray-300 shadow-md rounded-lg">
                            <div class="h-2 bg-red-400 rounded-t-md"></div>
                            <div class="px-8 py-6">

                            <div class="inline-flex">
                                <label class="block font-semibold text-left mr-4 mt-4">Child's Name</label>
                                <input type="text" placeholder="Child's Name" class="border w-96 h-5 px-3 py-5 mt-2 hover:outline-none focus:ring-1 focus:ring-red-400 rounded-md">  
                            </div>
</div>
                                <div class="flex justify-around item-baseline">
                                    <button type="submit" class="mt-4 mr-2 bg-red-400 text-white py-2 px-6 rounded-md hover:bg-red-800">Add Child</button>
                                </div>
                            </div>
                        
                        
                </div>
                                   
                    
                <!-- Add an event -->
                <div class="h-auto text-gray-800 flex flex-col sm:mx-auto text-center"> 
                        <span class="text-2xl">Add an event</span>
                        <div class="mt-4 bg-gray-300 shadow-md rounded-lg">
                            <div class="h-2 bg-red-400 rounded-t-md"></div>
                            <div class="px-8 py-6">

                                <div class="inline-flex">
                                <label class="mt-4 block font-semibold text-left mr-4">Select event type</label> 
                                <select placeholder="Event Type"
                                    class="form-select w-96 h-5 px-3 py-5 mt-2 hover:outline-none focus:ring-1 focus:ring-red-400 rounded-md" 
                                    name="filterEvent" id="filterEvent"
                                 >
                                   <!-- This picklist will be populated by the actions table -->
                                </select>
                                </div>

                                
                                <div class="px-8 py-6">
                                    <div class="inline-flex">
                                    <label class="block font-semibold text-left mr-4">Event Notes</label>
                                    <input type="textarea" placeholder="Event Notes" class="border w-96 h-20 px-3 py-5 mt-2 hover:outline-none focus:ring-1 focus:ring-red-400 rounded-md">  
                                    </div>
                               <div class="flex justify-around item-baseline">
                                <button type="submit" class="mt-4 mr-2 bg-red-400 text-white py-2 px-6 rounded-md hover:bg-red-800">Add Event</button>
                            </div>
            
                            </div>
                        </div>
                    </div>

            </div>
        </div>
    </div>
     
</body>
<script src="../javascript/logout.js"></script>
</html>